<p style="color: green"><%= notice %></p>

<% content_for :title, "Todolists" %>

<h1>Todolists</h1>

<div id="todolists">
  <% @todolists.each do |todolist| %>
    <%= render todolist %>
    <p>
      <%= link_to "Show this todolist", todolist, class: "btn btn-primary", style: "--bs-btn-padding-y: .20rem; --bs-btn-padding-x: .3rem; --bs-btn-font-size: .70rem;" %>
    </p>
  <% end %>
</div>

<%= link_to "New todolist", new_todolist_path, class: "btn btn-primary", style: "--bs-btn-padding-y: .20rem; --bs-btn-padding-x: .3rem; --bs-btn-font-size: .70rem;" %>



